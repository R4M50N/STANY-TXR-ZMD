{
  "name": "STANY-TXR-ZMD",
  "description": "Enterprise-Grade WhatsApp Bot by ©𝚂𝚃𝙰𝙽𝚈-𝚃𝙴𝙲𝙷",
  "keywords": ["whatsapp-bot", "stany-tech", "automation", "enterprise"],
  "logo": "https://files.catbox.moe/srobdn.jpg",
  "repository": "https://github.com/Stanking11/STANY-TXR-ZMD",
  "success_url": "/deploy",
  "stack": "heroku-24",
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  
  "env": {
    "NODE_ENV": {
      "description": "Application environment (production/staging)",
      "value": "production"
    },
    "SESSION_ID": {
      "description": "Encrypted session identifier",
      "required": true,
      "generator": "secret"
    },
    "OWNER_NUMBER": {
      "description": "Admin number in international format",
      "required": true,
      "value": "255794481386"
    },
    "PREFIX": {
      "description": "Command prefix",
      "required": true,
      "value": "."
    },
    "ANTICALL": {
      "description": "Block calls (1=Yes, 2=No)",
      "value": "1"
    },
    "ANTILINK": {
      "description": "Block links (1=Yes, 2=No)",
      "value": "1"
    },
    "ANTILINK_KICK": {
      "description": "Kick link senders (1=Yes, 2=No)",
      "value": "2"
    },
    "ANTIBADWORD": {
      "description": "Filter bad words (1=Yes, 2=No)",
      "value": "1"
    },
    "ANTIBADWORD_KICK": {
      "description": "Kick bad word users (1=Yes, 2=No)",
      "value": "2"
    },
    "ANTIDELETE": {
      "description": "Prevent message deletion (1=Yes, 2=No)",
      "value": "1"
    },
    "ANTITAG": {
      "description": "Block bot tagging (1=Yes, 2=No)",
      "value": "1"
    },
    "ANTISTICKER": {
      "description": "Block stickers (1=Yes, 2=No)",
      "value": "1"
    },
    "ANTISTICKER_KICK": {
      "description": "Kick sticker senders (1=Yes, 2=No)",
      "value": "2"
    },
    "ANTIBOT": {
      "description": "Bot detection (1=Yes, 2=No)",
      "value": "1"
    },
    "ANTIBOT_KICK": {
      "description": "Kick detected bots (1=Yes, 2=No)",
      "value": "1"
    }, 
    "BOT_NAME": {
      "description": "Display name",
      "value": "𝚂𝚃𝙰𝙽𝚈-𝚃𝚇𝚁-𝚉𝙼𝙳"
    },
    "ALIVE_IMG": {
      "description": "Status image URL",
      "value": "https://files.catbox.moe/0ydsic.jpeg"
    },
    "LIVE_MSG": {
      "description": "Custom status message",
      "value": "> STANY-TXR AM ONLINE BY MY HANDSOME CREATOR⚡"
    },
    "MODE": {
      "description": "Operation mode (1=public, 2=private)",
      "value": "1"
    },
    "BAD_WORDS_LIST": {
      "description": "Comma-separated banned words",
      "value": "nude,sex,porn,fuck,bitch"
    }
  },

  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest"
    },
    {
      "url": "heroku/python"
    }
  ],

  "addons": [
    {
      "plan": "heroku-postgresql:hobby-dev",
      "as": "DATABASE"
    },
    {
      "plan": "heroku-redis:hobby-dev",
      "as": "REDIS"
    },
    {
      "plan": "logdna:quaco"
    }
  ],

  "environments": {
    "test": {
      "scripts": {
        "test": "npm run test"
      }
    }
  }
}
